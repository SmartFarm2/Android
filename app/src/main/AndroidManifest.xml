<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.smartfarm.myapplication">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.Service.STOP_FOREGROUND_REMOVE" />
    <uses-permission android:name="android.permission.CAMERA"/>

    <application
        android:name="com.smartfarm.myapplication.application.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication"
        android:usesCleartextTraffic="true">
        <activity android:name="com.smartfarm.myapplication.view.QrScanActivity" />
        <activity android:name="com.smartfarm.myapplication.view.QrActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.smartfarm.myapplication.view.SignActivity"
            android:windowSoftInputMode="adjustResize">
        </activity>
        <activity android:name="com.smartfarm.myapplication.view.CCTVActivity" />

        <service android:name="com.smartfarm.myapplication.network.SocketService" /> <!-- enabled : 외부 시스템이 알아서 receiver를 실행 -->
        <!-- exported : 외부 어플리케이션에서 사용가능하게 할 지 여부 -->
        <receiver android:name="com.smartfarm.myapplication.network.BootService">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <activity android:name="com.smartfarm.myapplication.view.MainActivity" />
    </application>

</manifest>